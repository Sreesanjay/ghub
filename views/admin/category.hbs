<section class="category d-flex mt-2">
    <div class="admin-side-bar ms-4 mb-3">
        <div class="link-wraper my-2 px-4  py-4">
            <ul class="navbar-nav">
                <li class="nav-item d-flex align-items-center mb-5">
                    <img src="https://cdn-icons-png.flaticon.com/512/1694/1694011.png" alt="" class="side-bar-icon">
                    <a href="/admin" class="txt-decoration-null ms-3 fw-bold text-muted">Dashboard</a>
                </li>
                <li class="nav-item d-flex align-items-center mb-5">
                    <i class="fa-solid fa-box-open side-bar-icon"></i>
                    <a href="/admin" class="txt-decoration-null ms-3 fw-bold text-muted">Products</a>
                </li>
                <li class="nav-item d-flex align-items-center mb-5">
                    <i class="fa-regular fa-user side-bar-icon"></i>
                    <a href="/admin" class="txt-decoration-null ms-3 fw-bold text-muted">Customers</a>
                </li>
                <li class="nav-item d-flex align-items-center mb-5">
                    <i class="fa-solid fa-cart-shopping side-bar-icon"></i>
                    <a href="/admin" class="txt-decoration-null ms-3 fw-bold text-muted">Orders</a>
                </li>
                <li class="nav-item d-flex align-items-center mb-5">
                    <i class="fa-solid fa-table-cells-large fa-custom-icon side-bar-icon"></i>
                    <a href="/admin/category" class="txt-decoration-null ms-3 fw-bold text-muted">Category</a>
                </li>
                <li class="nav-item d-flex align-items-center mb-5">
                    <i class="fa-solid fa-arrow-up-from-bracket side-bar-icon" style="transform: rotate(90deg);"></i>
                    <a href="/admin" class="txt-decoration-null ms-3 fw-bold text-muted">Sales Report</a>
                </li>
                <li class="nav-item d-flex align-items-center mb-5">
                    <i class="fa-solid fa-font-awesome side-bar-icon"></i>
                    <a href="/admin" class="txt-decoration-null ms-3 fw-bold text-muted">Banner Management</a>
                </li>
                <li class="nav-item d-flex align-items-center mb-5">
                    <i class="fa-solid fa-money-bill-wave side-bar-icon"></i>
                    <a href="/admin" class="txt-decoration-null ms-3 fw-bold text-muted">Coupon Management</a>
                </li>

            </ul>
        </div>
        <div class="sidebar-footer btn-group dropup ">
            <div class="btn-group dropup">
                <button type="button" class="btn dropdown-toggle text-white" data-bs-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item text-white" href="/admin/sign-out">Log out</a>
                    <a class="dropdown-item text-white" href="#">Edit Profile</a>
                </div>
            </div>
            <div class="user-details">
                <p class="m-0" style="font-size:17px;">{{admin.user_name}}</p>
                <p class="fw-lighter m-0" style="font-size:12px;">{{admin.admin_email}}</p>
            </div>
        </div>
    </div>
    <div class="category-list p-4" style="width: 100%;">
        <div class="header d-flex justify-content-between">  
          <h3 class="mb-4">Categories</h3>
          <a href="/admin/category/new-category" class="btn btn-primary" style="height:40px;">New Category</a>
        </div>
        <table id="example" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Discription</th>
                    <th>Status</th>
                    <th>Created at</th>
                    <th>Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>{{this.cat_name}}</td>
                    <td>{{this.discription}}</td>
                    <td>
                        {{#if this.cat_status}}
                        <span>List</span>
                        {{else}}
                        <span>List</span>
                        {{/if}}
                    </td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        <a href="/admin/category/edit-category/{{this._id}}" class="ms-3"><i class="fa-solid fa-pen"></i></a>
                        <a href="" class="text-danger ms-2"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</section>
<script>
    $(document).ready(function () {
        new DataTable('#example');
    })

</script>