<section class="forgot-pass-verifier row">
    <div class="left-container col-md-6 d-flex justify-content-center align-items-center">
        <img class="forgot-img"
            src="https://cdni.iconscout.com/illustration/premium/thumb/forgot-the-password-5795917-4841574.png?f=webp"
            alt="">
    </div>
    <div class="d-flex justify-content-center align-items-center container col-md-6 p-5 ">
        <div class="card verify-wrapper pb-5 pt-4 px-3">
            <h3 align="center" class="mb-4">Forgot Password</h3>
            <div class="email-section d-flex flex-column align-items-start px-5">
                <label class="m-0">Enter your verified email address</label>
                <input type="text" class="form-control mt-3 admin-email" name="admin_email" autofocus="">
                <div class="emailErr text-danger"></div>
                <button class="btn mt-3 px-5" id="email-verify-btn">Verify</button>
            </div>
            <div class="otp-section d-flex flex-column align-items-center px-5">
                <div id="otp-wraper">
                    <label class="m-0 mt-3">Enter the code we just send to <br> <b
                            class="text-danger email-span"></b></label>
                    <input type="text" class="form-control mt-3 admin-otp" autofocus="">
                    <div class="otpErr text-danger"></div>
                    <button class="btn mt-3 px-5" id="otp-verify-btn">Verify</button>
                    <div class="resend-wraper">
                        <span class=" mobile-text">Don't receive the code?</span>
                        <span class="font-weight-bold text-danger cursor" id="email-verify-btn">Resend</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>