<style>

.card {
    box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
}
.card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0 solid rgba(0,0,0,.125);
    border-radius: 1rem;
}
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />

<div class="container" id="invoice">
<div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="invoice-title">
                        <h4 class="float-end font-size-15">Invoice: {{order.payment_details.payment_id}}</h4>
                        <div class="mb-4">
                           <h2 class="mb-1 text-muted">GHub.com</h2>
                        </div>
                        <div class="text-muted">
                            <p class="mb-1">Sold by: Ghub Electronics</p>
                            <p class="mb-1"><i class="uil uil-envelope-alt me-1"></i> ghub.com</p>
                            <p><i class="uil uil-phone me-1"></i>+91 8590755727</p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="text-muted">
                                <h5 class="font-size-16 mb-3">Billed To:</h5>
                                <h5 class="font-size-15 mb-2">{{order.user.user_name}}</h5>
                                <p class="mb-1">{{order.delivery_address.area_street}}, Near to {{order.delivery_address.landmark}}, {{order.delivery_address.locality}}, {{order.delivery_address.town}}, {{order.delivery_address.state}}, {{order.delivery_address.pincode}}</p>
                                <p class="mb-1">{{order.user.user_email}}</p>
                                <p>{{order.user.user_mobile}}</p>
                            </div>
                        </div>
                        <!-- end col -->
                        <div class="col-sm-6">
                            <div class="text-muted text-sm-end">
                                <div>
                                    <h5 class="font-size-15 mb-1">Invoice No:</h5>
                                    <p>{{order.payment_details.payment_id}}</p>
                                </div>
                                <div class="mt-4">
                                    <h5 class="font-size-15 mb-1">Invoice Date:</h5>
                                    <p>{{toDate order.payment_details.created_at}}</p>
                                </div>
                                <div class="mt-4">
                                    <h5 class="font-size-15 mb-1">Order Id:</h5>
                                    <p>{{order._id}}</p>
                                </div>
                            </div>
                        </div>
                        <!-- end col -->
                    </div>
                    <!-- end row -->
                    
                    <div class="py-2">
                        <h5 class="font-size-15">Order Summary</h5>

                        <div class="table-responsive">
                            <table class="table align-middle table-nowrap table-centered mb-0">
                                <thead>
                                    <tr>
                                        <th style="width: 70px;">No.</th>
                                        <th>Item</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th class="text-end" style="width: 120px;">Total</th>
                                    </tr>
                                </thead><!-- end thead -->
                                <tbody>
                                    <tr>
                                        <th scope="row">01</th>
                                        <td>
                                            <div>
                                                <h5 class="text-truncate font-size-14 mb-1">{{order.prod_details.product_name}}</h5>
                                                <p class="text-muted mb-0">{{order.category.cat_name}},{{order.prod_details.prod_color}}</p>
                                            </div>
                                        </td>
                                        <td>₹{{devide order.products.price order.products.quantity}}</td>
                                        <td>{{order.products.quantity}}</td>
                                        <td class="text-end">₹{{order.products.price}}</td>
                                    </tr>
                                    <tr>
                                        <th scope="row" colspan="4" class="text-end">Sub Total</th>
                                        <td class="text-end">₹{{order.products.price}}</td>
                                    </tr>
                                    <!-- end tr -->
                                    <tr>
                                        <th scope="row" colspan="4" class="border-0 text-end">
                                            Discount :</th>
                                        <td class="border-0 text-end">- ₹{{order.products.discount}}</td>
                                    </tr>
                                    <!-- end tr -->
                                    <tr>
                                        <th scope="row" colspan="4" class="border-0 text-end">
                                            Shipping Charge :</th>
                                        <td class="border-0 text-end">₹0</td>
                                    </tr>
                                    <tr>
                                        <th scope="row" colspan="4" class="border-0 text-end">Total</th>
                                        <td class="border-0 text-end"><h4 class="m-0 fw-semibold">₹{{subtract order.products.price order.products.discount}}</h4></td>
                                    </tr>
                                    <!-- end tr -->
                                </tbody><!-- end tbody -->
                            </table><!-- end table -->
                        </div><!-- end table responsive -->
                        <div class="d-print-none mt-4">
                            <div class="float-end">
                                <a href="/order/print-invoice?orderid={{order._id}}&product={{order.prod_details._id}}" class="btn btn-success me-1" onclick="printInvoice(event,'{{order._id}}','{{order.prod_details._id}}')"><i class="fa fa-print"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- end col -->
    </div>
</div>

