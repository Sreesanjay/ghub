<div class="user-nav">
  <div class="d-flex flex-wrap justify-content-between align-items-center user-header py-md-2 px-md--5">
    <div class="logo">
      <a href="/" class="txt-decoration-null">
        <div class="logo ms-3 d-flex align-items-center">
          <img src="https://drive.google.com/uc?id=1ve4rabj5ZgaVS1OkNsfX8OP_yOsLBDJl" alt="">
          <h1 class="m-0 ms-2">GHub</h1>
        </div>
      </a>
    </div>
    <div class="search d-none d-md-block">
      <div class="search-box form-control d-flex  justify-content-end">
        <input type="search" id="search" list="browsers" {{#if search}}value="{{search}}" {{/if}}
          placeholder="Searc Products Brands and More.." name="search" autocomplete="off">
        <datalist id="browsers">
          {{#if products}}
          {{#each products}}
          <option value="{{this.product_name}}">
            {{/each}}
            {{/if}}
            {{#if category}}
            {{#each category}}
          <option value="{{this._id}}"></option>
          {{#each this.products}}
          <option value="{{this.product_name}}">
            {{/each}}
            {{/each}}
            {{/if}}
        </datalist>
        <a class="btn" id="search-btn" onclick="appendSearch(event)" href="/products"><i
            class="fa-solid fa-magnifying-glass"></i></a>
      </div>
    </div>
    <div class="link">
      <ul class="navbar-nav d-flex flex-row align-items-center">
        <li class="me-3 me-sm-5">
          <a class="nav-link " href="/my-cart"><i class="fa-solid fa-cart-shopping"> </i><span
              class="cart-count bg-danger px-2 rounded-circle text-white">{{userData.cart.length}}</span></a>
        </li>
        <li class="me-3 me-sm-5">
          <a class="nav-link" href="/account/my-wishlist">

            <i class="fa-solid fa-heart"></i>
          </a>
        </li>
        <li class="me-3 me-sm-5">
          <a class="nav-link" onclick="toggleProfile()">
            {{#if userData}}
            <h4 class="rounded-circle blue-clr text-white py-2 px-3">{{firstLetter userData.user_name}}</h4>
            {{else}}
            <i class="fa-solid fa-user"></i>
            {{/if}}
          </a>
        </li>
      </ul>
    </div>
    <div class="card" id="profile-crad" style="width:250px;">
      {{#if userData}}
      <div class="list bg-light px-3 py-3 align-items-center">
        <p class="m-0 ms-3 fw-bold">{{userData.user_name}}</p>
        <p class="m-0 ms-3" style="font-size:12px;">{{userData.user_email}}</p>

      </div>
      {{/if}}
      <a href="/account" class="txt-decoration-null text-dark">
        <div class="list d-flex px-3 py-3 align-items-center">
          <i class="fa-solid fa-user"></i>
          <p class="m-0 ms-3">My Account</p>
        </div>
      </a>
      <a href="/account/my-orders" class="txt-decoration-null text-dark">
        <div class="list d-flex px-3 py-3 align-items-center">
          <i class="fa-solid fa-user"></i>
          <p class="m-0 ms-3">Orders</p>
        </div>
      </a>
      {{#if userData}}
      <div class="list d-flex px-3 py-3 align-items-center bg-light">
        <i class="fa-solid fa-user"></i>
        <p class="m-0 ms-3"><a href="/user-logout" class="txt-decoration-null">Logout</a></p>
      </div>
      {{else}}
      <div class="list d-flex px-3 py-3 align-items-center bg-light">
        <i class="fa-solid fa-user"></i>
        <p class="m-0 ms-3"><a href="/login" class="txt-decoration-null">Login/Sign Up</a></p>
      </div>
      {{/if}}
    </div>
  </div>
  <div class="search-bar user-header px-3 d-md-none py-2">
    <div class="search d-block d-md-none">
      <div class="search-box form-control d-flex justify-content-end" style="width:90vw !important">
        <input type="search" placeholder="Searc Products Brands and More..">
        <button class="btn"><i class="fa-solid fa-magnifying-glass"></i></button>
      </div>
    </div>
  </div>
</div>
<script>
  $(function () {
    appendSearch = (e) => {
      const search = document.getElementById('search').value
      let searchBtn = document.getElementById('search-btn')
      searchBtn.href = searchBtn.href + `?search=${search}`
    }
  })
</script>