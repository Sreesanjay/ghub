<div class="bg-light pt-3"></div>

<div class="container-home p-0 px-3 m-0">
  {{!-- carousel banner --}}
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      {{#each banner}}
      <a href="{{this.reference}}">
        <div class="carousel-item active">
          <img src="/Images/Banners/{{this.image.filename}}" class="d-block w-100" alt="...">
        </div>
      </a>
      {{/each}}
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <section class="brand-list p-0 m-0 pb-4 mt-2 row gx-5 gy-5 px-5 d-flex justify-content-center"
    style="background-color:rgb(255, 255, 255);">
    {{!-- <h3 class="mb-3 fw-bold">Top Brands</h3> --}}
    {{#each brands}}
    <div class="card col-md-3 p-0 py-3 me-3 d-flex justify-content-center"
      style="width:220px; background-color:#3D05AD;">
      <a href="/products?brand={{this._id}}" class="txt-decoration-null">
        <h3 align="center" style="text-transform: uppercase;color:#ffffff">{{this._id}}</h3>
      </a>
    </div>
    {{/each}}
  </section>
  <section>

    <div class="">
      <h3 class="px-5 pt-4 fw-bold">Top sales {{this.this._id}}</h3>
      <section style="background-color: #ffffff;" class="mt-4">
        <div class="container py-2 pb-3">
          <div class="row">
            {{#each topOrders}}
            {{!-- mb-4 mb-lg-0 --}}
            <div class="col-md-3 mt-4">
              <div class="card p-1 me-3" style="height:fit-content; min-height:440px;">
                <a href="/view-product/{{this.products._id}}" class="txt-decoration-null text-dark">
                  <div class="card-header d-flex justify-content-center bg-white">
                    <img src="/Images/Products/{{this.products.primary_img.filename}}" class="card-img-top" alt="Laptop"
                     />
                  </div>
                  <div class="card-body d-flex flex-column justify-content-between">

                    <div class="d-flex justify-content-between mb-3 "> 
                      <h5 class="mb-0" data-formatter="shortingText">{{this.products.product_name}}
                        {{this.products.prod_highlight}}</h5>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      <h5 class="mb-0 text-danger">₹{{this.products.sellig_price}}</h5>
                      <h6 class="mb-0"><strike>₹{{this.products.prod_price}}</strike></h6>
                      {{#isEqual this.products.totalRating 0}}
                      {{else}}
                      <h5 class="text-warning mb-0">{{this.products.totalRating}} <i class="fa fa-star"></i></h5>
                      {{/isEqual}}
                    </div>
                  </div>
                </a>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </section>
    </div>

  </section>
  <section class="mt-2">
    {{#each category}}
    <div class="">
      <h3 class="px-5 pt-4 fw-bold">Latest {{this.this._id}}</h3>
      <section style="background-color: #ffffff;" class="mt-4">
        <div class="container py-2 pb-4">
          <div class="row">
            {{#each this.products}}
            {{!-- mb-4 mb-lg-0 --}}
            <div class="col-md-4 col-lg-3 mt-4">
              <div class="card p-1 me-3" style="height:fit-content; min-height:440px;">
                <a href="/view-product/{{this._id}}" class="txt-decoration-null text-dark">
                  <div class="card-header d-flex justify-content-center bg-white">
                    <img src="/Images/Products/{{this.primary_img.filename}}" class="card-img-top" alt="Laptop"
                      />
                  </div>
                  <div class="card-body d-flex flex-column justify-content-between">

                    <div class="d-flex justify-content-between mb-3 ">
                      <h5 class="mb-0" data-formatter="text wrap">{{this.product_name}} {{this.prod_highlight}}</h5>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      <h5 class="mb-0 text-danger">₹{{this.sellig_price}}</h5>
                      <h6 class="mb-0"><strike>₹{{this.prod_price}}</strike></h6>
                      {{#isEqual this.totalRating 0}}
                      {{else}}
                      <h5 class="text-warning mb-0">{{this.totalRating}} <i class="fa fa-star"></i></h5>
                      {{/isEqual}}
                    </div>
                  </div>
                </a>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </section>
    </div>
    {{/each}}
  </section>
</div>